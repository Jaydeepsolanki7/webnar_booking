<div class="row">
  <div class="col-lg-12">
    <h3 class="mt-4 mb-4">Listing Workshops</h3>

    <div class="row">
      <% @workshops.each do |workshop| %>
        <div class="col-lg-3">
          <div class="card shadow mb-3 mt-2 text-center">
            <div card="card-body ">
              <h4 class="card-title mt-3"><i><%= workshop.name%></i></h4><hr>
              <p class="lead"><%= truncate(workshop.description, length: 60) %></p>
              <h4><span class="badge bg-dark"><%= workshop.total_days%></h4>
              <h5><span class="badge bg-dark"><%= workshop.daily_duration%></h5>
              <h5><span class="badge bg-dark"><%= workshop.daily_workshop_hour%></h5>

              <%= link_to "View Details", workshop, class:"btn btn-outline-success mb-1"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>